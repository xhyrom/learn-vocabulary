---
interface Props {
  title: string;
  body?: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href}>
  <section
    class="flex flex-col text-center items-center justify-between rounded-md border-[1px] border-neutral-800 bg-dark-100 p-6 cursor-pointer"
  >
    <div class="flex flex-col text-center items-center">
      <h2 class="break-words text-white text-3xl font-bold">{title}</h2>

      <p class="break-all text-neutral-300">{body}</p>
    </div>
  </section>
</a>
